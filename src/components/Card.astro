---
import { Picture } from 'astro:assets';
const {...film} = Astro.props;


---

<article class="bg-gray-50 border border-gray-200 shadow-md rounded-lg overflow-hidden transition transform hover:scale-105 hover:shadow-xl">
    <img class="w-full h-48 object-cover" src={film.image} alt={film.Nom} />
    <div class="p-4">
      <h2 class="text-xl font-bold text-gray-800 mb-2">{film.Nom}</h2>
      <p class="text-gray-700 mb-4">{film.Description}</p>
      <div class="text-sm text-gray-600 space-y-1">
        <p><strong>Type :</strong> {film.Type}</p>
        <p>
            <strong>Bande Annonce :</strong>
            <a
              href={film.BandeA}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-500 hover:underline"
            >
              Voir la vid√©o
            </a>
          </p>
        <p><strong>Date :</strong> {film.Date}</p>
      </div>
    </div>
  </article>