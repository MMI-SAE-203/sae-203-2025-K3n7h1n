---
const { ...event } = Astro.props;
---
<div class="bg-white rounded-lg overflow-hidden shadow-lg transform transition duration-300 hover:scale-105">
  {event.imgUrl && (
    <img class="w-full h-auto object-cover" src={event.imgUrl} alt={event.Nom ? event.Nom : "Événement"} class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <h3 class="text-2xl font-semibold text-gray-800 mb-2">
      {event.Nom ? event.Nom : "Événement"}
    </h3>
    <p class="text-sm text-gray-500 mb-4">{event.Date}</p>
    {event.Description && (
      <p class="text-gray-700 text-base leading-relaxed">{event.synopsis}</p>
    )}
  </div>
</div>
