<footer class="bg-[#77B5FE] text-[#FFD700]">
  <!-- Section principale du footer -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo et description -->
      <div class="col-span-1 md:col-span-2">
        <h2 class="text-2xl font-bold text-white mb-4">Festival CinéMatsuri</h2>
        <p class="text-white mb-4">
          Rejoignez notre communauté passionnée d'anime et manga. Partagez votre passion, 
          découvrez de nouveaux Films et faites des rencontres inoubliables !
        </p>
        <div class="flex space-x-4">
          <a href="https://twitter.com/" class="hover:text-[#FF69B4] transition-colors">
            <span class="sr-only">Twitter</span>
          </a>
          <a href="https://youtube.com/" class="hover:text-[#FF69B4] transition-colors">
            <span class="sr-only">YouTube</span>
          </a>
        </div>
      </div>

      <!-- Liens rapides -->
      <div>
        <h3 class="text-white font-semibold mb-4">Liens rapides</h3>
        <ul class="space-y-2">
          <li>
            <a href="/catalogue" class="hover:text-[#FF69B4] transition-colors">
              Catalogue d'animes
            </a>
          </li>
          <li>
            <a href="/programmation" class="hover:text-[#FF69B4] transition-colors">
              Événements
            </a>
          </li>
          <li>
            <a href="/rules" class="hover:text-[#FF69B4] transition-colors">
              Règles 
            </a>
          </li>
          <li>
            <a href="/info" class="hover:text-[#FF69B4] transition-colors">
              Infos Pratiques
            </a>
          </li>
          
        </ul>
      </div>

      <!-- Catégories -->
      <div>
        <h3 class="text-white font-semibold mb-4">Catégories</h3>
        <ul class="space-y-2">
          <li>
            <a href="/catalog?genre=shonen" class="hover:text-[#FF69B4] transition-colors">
              Shōnen
            </a>
          </li>
          <li>
            <a href="/catalog?genre=seinen" class="hover:text-[#FF69B4] transition-colors">
              Kodomo 
            </a>
          </li>
          <li>
            <a href="/catalog?genre=shojo" class="hover:text-[#FF69B4] transition-colors">
              Shōjo
            </a>
          </li>
          <li>
            <!-- Vous pouvez ajouter d'autres éléments ici -->
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Barre de copyright -->
  <div class="border-t border-white">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-sm">
          &copy; Festival CinéMatsuri. Tous droits réservés.
        </div>
        <div class="flex items-center space-x-4 text-sm">
          <a href="/privacy" class="hover:text-[#FF69B4] transition-colors">
            Politique de confidentialité
          </a>
          <span>•</span>
          <a href="/terms" class="hover:text-[#FF69B4] transition-colors">
            Conditions d'utilisation
          </a>
          <span>•</span>
          <a href="/contact" class="hover:text-[#FF69B4] transition-colors">
            Contact
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
