---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Contact" class="font-mono">
  <section id="contact" class="py-16 bg-white text-[#333]">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-6xl font-bold text-center mb-12 font-amatic">Contact</h2>
      <div class="max-w-3xl mx-auto">
        <form action="/api/contact" method="POST" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-lg font-medium text-[#77B5FE]">Nom</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="mt-2 w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                placeholder="Votre nom"
              />
            </div>
            <div>
              <label for="email" class="block text-lg font-medium text-[#77B5FE]">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="mt-2 w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
                placeholder="Votre email"
              />
            </div>
          </div>
          <div>
            <label for="subject" class="block text-lg font-medium text-[#77B5FE]">Sujet</label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="mt-2 w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
              placeholder="Sujet de votre message"
            />
          </div>
          <div>
            <label for="message" class="block text-lg font-medium text-[#77B5FE]">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              class="mt-2 w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
              placeholder="Votre message"
            ></textarea>
          </div>
          <div class="text-center">
            <button
              type="submit"
              class="bg-[#FF69B4] text-white px-8 py-4 rounded-full shadow-lg hover:bg-pink-500 transition-colors font-semibold"
            >
              Envoyer
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>
